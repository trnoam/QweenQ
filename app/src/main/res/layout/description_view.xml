<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/description_scroll_view"
    android:visibility="visible"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@color/White"
    android:layout_marginBottom="50dp"
    android:layout_marginTop="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/description_inner_layout"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_description_view_choice"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:background="@color/White"
            android:visibility="visible"
            android:minHeight="50dp"
            android:layout_alignParentStart="false"
            android:layout_above="@+id/description_scroll_view" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description_text"
            android:visibility="visible"
            android:textColor="@color/black" />

        <Button
            android:text="OK"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ok_description"
            android:minHeight="50dp"
            android:textColor="@color/colorToolBar"
            android:textSize="24sp"
            android:background="?attr/selectableItemBackground"
            android:visibility="visible"
            android:height="50dp"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/description_scroll_view" />

    </LinearLayout>
</ScrollView>

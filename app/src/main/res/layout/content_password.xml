<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.qween.qweenq.PasswordActivity"
    tools:showIn="@layout/activity_password"
    android:id="@+id/main_password_layout">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/password_scrollview">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/content_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:id="@+id/data_layout"
                android:layout_weight="0"
                android:layout_height="100dp">

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/amount_people_attraction_name"
                    android:minHeight="50dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text="Loading..."
                    android:textColor="@color/colorToolBar"
                    android:textSize="30sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/password_text"
                    android:minHeight="50dp"
                    android:maxLines="1"
                    android:minLines="1"
                    android:lines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/colorToolBar"
                    android:textSize="30sp"
                    android:text="Loading..."
                    android:layout_weight="1"
                    android:layout_height="50dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/attraction_image"
                app:layout_widthPercent="100%"
                app:layout_aspectRatio="100%"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>


